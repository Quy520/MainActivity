<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.fm.designstar.widget.CircleImageView
            android:id="@+id/hand"
            android:layout_margin="@dimen/sobot_10PX"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/defu_hand"
            ></com.fm.designstar.widget.CircleImageView>
        <TextView
            android:id="@+id/name"
            android:layout_marginTop="@dimen/sobot_10PX"
            android:layout_toRightOf="@+id/hand"
            android:textSize="14dp"
            android:textColor="@color/edit_color"
            android:text="㊙咪咪"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/type"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/hand"
            android:textSize="14dp"
            android:textColor="@color/hint_color"
            android:text="中国设计星评委导师"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:layout_marginRight="@dimen/sobot_20PX"
            android:layout_alignParentEnd="true"
            android:id="@+id/check_guanzhu"
            android:button="@null"
            android:background="@drawable/guanzhu_check"
            android:layout_centerVertical="true"
            android:src="@mipmap/home_guanzhu"
            android:layout_width="@dimen/sobot_20PX"
            android:layout_height="@dimen/sobot_20PX"/>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/imgLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.fm.designstar.widget.CostomGrideView

            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/gw2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="5dp">

        </com.fm.designstar.widget.CostomGrideView>
    </FrameLayout>
</LinearLayout>