<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.mine.activity.ChoseDesignerTagsActivity">
<include layout="@layout/layout_toolbar"></include>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_tagmansger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/addTags"
        android:layout_marginTop="@dimen/sobot_20PX"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="@dimen/sobot_10PX"
            android:textColor="@color/notice"

            android:text="新建标签"
            android:drawableLeft="@mipmap/home_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>