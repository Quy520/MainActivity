<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View

        android:layout_below="@+id/relin"
        android:background="@color/home_line"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        ></View>
<RelativeLayout
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.fm.designstar.widget.CircleImageView
        android:id="@+id/hand"
        android:layout_marginLeft="@dimen/sobot_10PX"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/defu_hand"
        ></com.fm.designstar.widget.CircleImageView>
    <TextView
        android:id="@+id/name"
        android:layout_marginTop="@dimen/sobot_15PX"
        android:layout_toRightOf="@+id/hand"
        android:textSize="16dp"
        android:textColor="@color/edit_color"
        android:text="㊙咪咪"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/hand"
        android:textSize="12dp"
        android:textColor="@color/home_color"
        android:text="中国设计星评委导师"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView

        android:layout_marginRight="@dimen/sobot_20PX"
      android:layout_alignParentEnd="true"
        android:id="@+id/more"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"

        android:src="@mipmap/icon_more_b" />


</RelativeLayout>
    <TextView
        android:layout_marginRight="@dimen/alivc_common_font_20"

        android:layout_marginLeft="70dp"
        android:id="@+id/content"
        android:textSize="14dp"
        android:textColor="@color/black3"
        android:text="#设计美学#今天也是元气满满的一天吖～"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_marginLeft="65dp"
        android:id="@+id/imgLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/oneImg"
            android:layout_width="158dp"
            android:layout_height="220dp"
            android:scaleType="fitXY" />
        <TextView
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:id="@+id/longmip"
            android:layout_marginLeft="180dp"
            android:gravity="center"
            android:padding="2dp"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/theme_color"
            android:background="@drawable/btn_huise_shape"
            android:text="长图"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/sobot_20PX"></TextView>
        <LinearLayout
            android:layout_marginRight="@dimen/alivc_common_font_20"
            android:id="@+id/ly_two_img"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/oneImg2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"

                android:scaleType="centerCrop" />
            <ImageView
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/oneImg3"
                android:layout_width="220dp"
                android:layout_height="wrap_content"

                android:scaleType="centerCrop" />
        </LinearLayout>
        <com.fm.designstar.widget.CostomGrideView
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/gw"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:horizontalSpacing="5dp"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="5dp">

        </com.fm.designstar.widget.CostomGrideView>

        <com.fm.designstar.widget.CostomGrideView
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/gw2"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="5dp">

        </com.fm.designstar.widget.CostomGrideView>
    </FrameLayout>

    <cn.jzvd.JZVideoPlayerStandard
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/video_player"
        android:layout_width="wrap_content"
        android:layout_height="150dp" />


    <com.fm.designstar.widget.viegroup.MyViewGroup
        android:layout_marginLeft="55dp"

        android:id="@+id/myViewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@android:color/white" />
    <RelativeLayout
        android:paddingTop="@dimen/dp_10"
        android:layout_marginLeft="60dp"

        android:paddingLeft="@dimen/sobot_10PX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:layout_marginLeft="3dp"
    android:id="@+id/im"
    android:layout_marginTop="3dp"
    android:src="@mipmap/home_zb"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12dp"
            android:id="@+id/address"
            android:layout_marginLeft="5dp"
            android:textColor="@color/home_color2"
            android:layout_toRightOf="@+id/im"
            android:text="上海市"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <RelativeLayout
       android:layout_marginBottom="7dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="@dimen/sobot_10PX"
        android:paddingRight="@dimen/sobot_10PX"
        android:layout_below="@+id/foodImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="65dp"
            android:id="@+id/time"
            android:layout_marginTop="6dp"
            android:textSize="12dp"
            android:textColor="@color/home_color2"
            android:text="三小时前"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:visibility="gone"

            android:id="@+id/share"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"

            android:src="@mipmap/home_share"
            android:layout_width="@dimen/sobot_20PX"
            android:layout_height="@dimen/sobot_20PX"/>

        <TextView
            android:visibility="gone"

            android:layout_toRightOf="@+id/share"
            android:id="@+id/tv_share"

            android:textColor="@color/hint_color"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"

            android:text="分享"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:layout_toLeftOf="@+id/likenum"
            android:id="@+id/check_like"
            android:button="@null"
            android:background="@drawable/homelike_check"
            android:layout_marginLeft="@dimen/sobot_20PX"
            android:layout_centerVertical="true"

            android:src="@mipmap/home_guanzhu"
            android:layout_width="18dp"
            android:layout_height="18dp"/>

        <TextView
            android:textSize="12dp"
            android:textColor="@color/hint_color"
            android:id="@+id/likenum"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/message"
            android:layout_centerVertical="true"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView

            android:id="@+id/message"

            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
          android:layout_toLeftOf="@+id/message_num"
            android:src="@mipmap/home_com"
            android:layout_width="18dp"
            android:layout_height="18dp"/>

        <TextView
            android:textSize="12dp"

            android:layout_alignParentEnd="true"
            android:textColor="@color/hint_color"
            android:id="@+id/message_num"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/alivc_common_font_10"
            android:text="23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

</LinearLayout>