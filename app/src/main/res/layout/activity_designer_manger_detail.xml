<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/theme_color"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.mine.activity.DesignerMangerDetailActivity">
<include layout="@layout/layout_toolbar"></include>
    <com.fm.designstar.widget.MyScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.fm.designstar.widget.CircleImageView
            android:layout_marginLeft="@dimen/sobot_10PX"
            android:src="@mipmap/defu_hand"
            android:id="@+id/hand"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_toRightOf="@+id/hand"
            android:textSize="14dp"
            android:padding="@dimen/sobot_10PX"
            android:text=""
            android:ellipsize="end"
            android:maxLength="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="14dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/time"
            android:padding="@dimen/sobot_10PX"
            android:text="认证于：2020-8-20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="@dimen/sobot_20PX"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:id="@+id/com_im"
        android:layout_width="120dp"
        android:layout_height="160dp"></ImageView>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/sobot_10PX"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/realname"
            android:padding="@dimen/sobot_10PX"
            android:text="姓名："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <RelativeLayout

            android:id="@+id/re_name"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:background="@color/theme_color"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/im"
                android:id="@+id/tv_name"
                android:layout_marginRight="@dimen/sobot_20PX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/edit_color"
                android:textSize="16dp" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:text="@string/real_name"
                android:textColor="@color/edit_color2"
                android:textSize="16dp" />

        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/re_phone"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:background="@color/theme_color"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/im"
                android:id="@+id/tv_phone"
                android:layout_marginRight="@dimen/sobot_20PX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/edit_color"
                android:textSize="16dp" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:text="@string/lainxi"
                android:textColor="@color/edit_color2"
                android:textSize="16dp" />

        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/re_birth"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/edit_color"

                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/im3"
                android:id="@+id/tv_birth"
                android:layout_marginRight="@dimen/sobot_20PX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""

                android:textSize="16dp" />


            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:text="@string/my_brith"
                android:textColor="@color/edit_color2"
                android:textSize="16dp" />

        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/re_city"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/im4"
                android:id="@+id/tv_city"
                android:layout_marginRight="@dimen/sobot_20PX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海"
                android:textColor="@color/edit_color"
                android:textSize="16dp" />


            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:text="@string/my_city"
                android:textColor="@color/edit_color2"
                android:textSize="16dp" />

        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/re_com"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:background="@color/theme_color"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/im"
                android:id="@+id/tv_com"
                android:layout_marginRight="@dimen/sobot_20PX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/edit_color"
                android:textSize="16dp" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:text="@string/com_name"
                android:textColor="@color/edit_color2"
                android:textSize="16dp" />

        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/re_job"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:background="@color/theme_color"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/im"
                android:id="@+id/tv_job"
                android:layout_marginRight="@dimen/sobot_20PX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/edit_color"
                android:textSize="16dp" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:text="@string/job_name"
                android:textColor="@color/edit_color2"
                android:textSize="16dp" />

        </RelativeLayout>
<RelativeLayout

    android:id="@+id/re_shenhe"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/theme_color"
        android:layout_marginTop="@dimen/sobot_10PX"
        android:layout_marginRight="@dimen/sobot_40PX"
        android:layout_marginLeft="@dimen/sobot_40PX"
        android:gravity="center"
        android:textSize="14dp"
        android:background="@drawable/btn_round_click_shape"
        android:id="@+id/pass"
        android:padding="@dimen/sobot_10PX"
        android:text="审核通过"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_toRightOf="@+id/pass"
        android:textColor="@color/theme_color"
        android:layout_marginTop="@dimen/sobot_10PX"
        android:layout_marginRight="@dimen/sobot_40PX"
        android:layout_marginLeft="@dimen/sobot_40PX"
        android:gravity="center"
        android:textSize="14dp"
        android:background="@drawable/btn_round_huise2_shape"
        android:id="@+id/nopass"
        android:padding="@dimen/sobot_10PX"
        android:text="拒绝"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>
        <TextView
            android:visibility="gone"

            android:id="@+id/tv"
            android:layout_marginTop="@dimen/sobot_10PX"
            android:gravity="center"
            android:text="您拒绝的理由？"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/check_re"
        android:padding="@dimen/sobot_10PX"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/lianxi"
            android:layout_weight="1"
            android:text="联系不上"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CheckBox>

        <CheckBox
            android:id="@+id/clear"
            android:layout_weight="1"

            android:text="资料不清晰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CheckBox>
        <CheckBox
            android:id="@+id/other"

            android:layout_weight="1"

            android:text="其他"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CheckBox>
    </LinearLayout>

    <EditText
        android:visibility="gone"

        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:gravity="top"
        android:hint="@string/your_resons"
        android:maxLength="10000"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:scrollbars="vertical"
        android:textColor="@color/edit_color"
        android:textColorHint="@color/hint_color"
        android:textSize="14sp" />

    <RelativeLayout
        android:visibility="gone"

        android:layout_marginBottom="20dp"
        android:id="@+id/re_nopass"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/theme_color"
            android:layout_marginTop="@dimen/sobot_10PX"
            android:layout_marginRight="@dimen/sobot_40PX"
            android:layout_marginLeft="@dimen/sobot_40PX"
            android:gravity="center"
            android:textSize="14dp"
            android:background="@drawable/btn_round_click_shape"
            android:id="@+id/sure"
            android:padding="@dimen/sobot_10PX"
            android:text="确认"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toRightOf="@+id/sure"
            android:textColor="@color/theme_color"
            android:layout_marginTop="@dimen/sobot_10PX"
            android:layout_marginRight="@dimen/sobot_40PX"
            android:layout_marginLeft="@dimen/sobot_40PX"
            android:gravity="center"
            android:textSize="14dp"
            android:background="@drawable/btn_round_huise2_shape"
            android:id="@+id/cancle"
            android:padding="@dimen/sobot_10PX"
            android:text="取消"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    </LinearLayout>

    </com.fm.designstar.widget.MyScrollView>
</LinearLayout>