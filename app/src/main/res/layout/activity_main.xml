<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.main.activity.MainActivity">

    <com.fm.designstar.widget.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent">

    </com.fm.designstar.widget.NoScrollViewPager>




    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <RelativeLayout
                android:gravity="center"
                android:id="@+id/homeLay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_marginTop="2dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:id="@+id/home"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_homeh" />
                <TextView
                    android:textSize="12dp"
                    android:id="@+id/tv_home"
                    android:textColor="@color/black3"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:layout_below="@+id/home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home"/>
            </RelativeLayout>





            <RelativeLayout
                android:gravity="center"
                android:id="@+id/locationLay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/location"
                    android:layout_marginTop="2dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/me_n" />
                <TextView
                    android:textSize="12dp"

                    android:id="@+id/tv_des"
                    android:textColor="@color/hint_color"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:layout_below="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/desinger"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:id="@+id/addLay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/home_add"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/main_add" />

            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:id="@+id/couponLay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">



                <ImageView
                    android:padding="2dp"
                    android:id="@+id/coupon"
                    android:layout_marginTop="2dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_xiaoxin" />

                <TextView

                    android:layout_marginLeft="13dp"
                    android:layout_alignLeft="@+id/coupon"
                    android:id="@+id/interNo"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/btn_round_click_shape"
                    android:gravity="center"

                    android:textSize="@dimen/sobot_10PX"
                    android:visibility="invisible" />

                <TextView
                    android:textSize="12dp"

                    android:id="@+id/tv_message"
                    android:textColor="@color/hint_color"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:layout_below="@+id/coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_main"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:id="@+id/meLay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/me"
                    android:layout_marginTop="2dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_men" />
                <TextView
                    android:textSize="12dp"

                    android:id="@+id/tv_my"
                    android:textColor="@color/hint_color"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:layout_below="@+id/me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/me"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>