<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/theme_color"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fm.designstar.views.login.activitys.PwdActivity">
    <RelativeLayout
        android:id="@+id/re_top"
        android:background="@mipmap/login_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:layout_marginLeft="@dimen/sobot_10PX"
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            android:layout_width="40dp"
            android:layout_height="50dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/pwd_top"
        android:layout_marginTop="@dimen/sobot_10PX"
        android:layout_below="@+id/re_top"
        android:textSize="24dp"
        android:textColor="@color/edit_color"
        android:gravity="center"
        android:text="@string/com_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/re_password"
        android:layout_below="@+id/pwd_top"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/btn_round_huise_shape"
        android:layout_marginTop="@dimen/sobot_20PX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText

            android:id="@+id/pwd"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/sobot_10PX"
            android:text=""
            android:background="@null"
            android:paddingLeft="@dimen/sobot_10PX"
            android:hint="@string/pwd_hint"
            android:layout_width="match_parent"
            android:layout_height="54dp"></EditText>
        <ImageView
            android:layout_marginRight="@dimen/sobot_20PX"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/close"
            android:layout_width="26dp"
            android:layout_height="wrap_content"></ImageView>
    </RelativeLayout>
    <TextView
        android:id="@+id/sure"
        android:layout_below="@+id/re_password"
        android:layout_marginTop="@dimen/sobot_20PX"
        android:layout_marginLeft="40dp"
        android:paddingLeft="@dimen/sobot_10PX"
        android:layout_marginRight="40dp"
        android:textColor="@color/edit_color"
        android:gravity="center"
        android:text="@string/sure"
        android:background="@drawable/btn_round_huise2_shape"
        android:layout_width="match_parent"
        android:layout_height="54dp"/>


    <TextView
        android:id="@+id/long_notice"
        android:layout_marginLeft="@dimen/sobot_20PX"
        android:layout_marginRight="@dimen/sobot_20PX"
        android:gravity="center"
        android:layout_marginBottom="@dimen/sobot_20PX"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录即表示同意中国设计星的《用户服务协议》与《隐私政策》"
        android:textColor="#FF666666"
        android:textSize="12dp"
        />
</RelativeLayout>