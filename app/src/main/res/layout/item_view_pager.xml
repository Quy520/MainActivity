<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.fm.designstar.widget.FullWindowVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        />
    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:clickable="false"
        android:focusable="false"
        android:visibility="visible"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.fm.designstar.widget.CircleImageView
                android:id="@+id/hand"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:src="@mipmap/defu_hand"
               />
            <ImageView
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/home_guanzhu"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
            android:layout_centerHorizontal="true"
                android:id="@+id/check_guanzhu"
                android:button="@null"
                android:background="@drawable/homelike_check"
                android:src="@mipmap/home_guanzhu"
                android:layout_width="34dp"
                android:layout_height="34dp"/>
            <TextView
                android:id="@+id/likenum"
                android:layout_below="@+id/check_guanzhu"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="14dp"

                android:textColor="@color/notice"
                android:gravity="center"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/re_message"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/message"
                android:button="@null"
                android:src="@mipmap/home_com"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/comenum"
                android:layout_below="@+id/message"
                android:layout_width="30dp"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="@color/theme_color"
                android:gravity="center"
                />

        </RelativeLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/img_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/icon_video_play"
        android:clickable="true"
        android:focusable="true"
        android:tint="#f2f2f2"
        android:alpha="0"
        android:layout_centerInParent="true"
        />



</RelativeLayout>