<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="@dimen/alivc_common_font_15"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:id="@+id/re_tuijain"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:id="@+id/im_tuijain"
            android:layout_marginTop="@dimen/sobot_15PX"
            android:src="@drawable/btn_round_click_shape"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sobot_10PX"></ImageView>
        <TextView
            android:textColor="@color/black3"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_tuijain"
            android:textSize="18dp"
            android:text="@string/guss_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="@dimen/alivc_common_font_15"

        android:id="@+id/recy_gusslike"
        android:layout_marginTop="@dimen/sobot_10PX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

    <View
        android:layout_marginTop="15dp"
        android:background="@color/home_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</LinearLayout>