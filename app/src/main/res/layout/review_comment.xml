<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    android:background="@color/theme_color"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/hasLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/edit_color"
            android:textSize="@dimen/sobot_15PX"
            android:layout_margin="@dimen/sobot_15PX"
            android:text="评论"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/close"
            android:layout_margin="@dimen/sobot_15PX"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/com_down"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re_no"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/nocommet"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nocomments"></ImageView>
        <TextView
            android:layout_below="@+id/nocommet"
            android:text="暂无评论"
            android:id="@+id/notv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:layout_marginBottom="45dp"
            android:layout_below="@+id/title"
            android:id="@+id/commentRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    <TextView

        android:layout_marginRight="@dimen/sobot_20PX"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/go_comment"
        android:layout_marginLeft="@dimen/sobot_20PX"
        android:gravity="center"
        android:textColor="@color/hint_color"
        android:layout_centerVertical="true"
        android:text="@string/review_i"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/btn_round_huise_shape"/>
    <RelativeLayout

        android:id="@+id/inputLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/black2"
        android:visibility="gone">

        <TextView
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_above="@+id/editText"
            android:layout_alignParentRight="true"
            android:background="#EEEEF3"
            android:gravity="center_vertical|right"
            android:paddingRight="15dp"
            android:text="@string/send"
            android:textColor="@color/colorAccent"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:hint="@string/review_i"
            android:maxLength="1000"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/edit_color"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp" />
    </RelativeLayout>.
    </RelativeLayout>
